<UserControl x:Class="FaceLinker.Components.WebcamSequence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FaceLinker.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="64"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="WebcamSelector" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,0,0,0" SelectionChanged="WebcamSelector_SelectionChanged">
            <ComboBoxItem Content="No Webcam" />
        </ComboBox>
        <Button x:Name="ReloadButton" Grid.Column="1" Content="Refresh" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="ReloadButton_Click" Margin="5,0"/>
    </Grid>
</UserControl>
